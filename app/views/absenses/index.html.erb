<p id="notice"><%= notice %></p>

<table align="center">
  <thead>
    <tr>
      <th>Shift</th>
      <th>Reason</th>
      <th>Employee</th>
      <th>Replacement Employee</th>
      <th colspan="3"><center>Actions</center></th>
    </tr>
  </thead>

  <tbody>
    <% @absenses.each do |absense| %>
      <tr>
        <td><%= absense.shift %></td>
        <td><%= absense.reason %></td>
        <td><%= absense.employee.first_name + " " + absense.employee.surname + " (" + absense.employee.employee_number + ")" %></td>
        <td><%= absense.replacement_employee %></td>
        <td><%= link_to 'Show', absense %></td>
        <td><%= link_to 'Edit', edit_absense_path(absense) %></td>
        <td><%= link_to 'Destroy', absense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
